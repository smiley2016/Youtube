<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="230dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@color/item_background_color"
    >

    <ImageView
        android:id="@+id/playlist_thumbnail"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/youtube"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        android:layout_marginTop="8dp"
        />



    <TextView
        android:id="@+id/playlist_title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/video_title"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/playlist_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/playlist_thumbnail" />

    <TextView
        android:id="@+id/playlist_video_title"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_color"
        android:text="@string/uploader_name"
        android:textSize="14sp"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playlist_title" />


</androidx.constraintlayout.widget.ConstraintLayout>